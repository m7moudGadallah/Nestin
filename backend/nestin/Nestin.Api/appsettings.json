{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=nestin;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=True;TrustServerCertificate=True" // Replace this dummy placeholder with your database connection
  },
  "Cors": {
    "Policy": "AllowTrusted", // to allow all use "AllowAll"
    "AllowedOrigins": [
      "https://localhost:7026", // swagger
      "http://localhost:4200" // angular app
    ]
  },
  "AppSettings": {
    "BaseUrl": "http://localhost:5218" // Replace this with server url
  },
  "Jwt": {
    "Issuer": "your-app", // Replace with your actual issuer
    "Audience": "your-app", // Replace with your actual audience
    "SigningKey": "super-secret-signing-key-that-is-long-enough-123!", // Replace with your Signing key
    "ExpirationInDays": 7
  },
  "FileStorage": {
    "WebRootPath": "wwwroot",
    "ImageDirectory": "images",
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif" ],
    "MaxFileSizeMB": 5
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/api/v1/accounts/register",
        "Period": "15m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/v1/accounts/login",
        "Period": "30m",
        "Limit": 5
      }
    ]
  },
  "OpenAI": {
    "ApiKey":  "sk-your-api-key" // set your api key here
  }
}
